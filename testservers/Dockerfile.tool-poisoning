FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY pyproject.toml .
COPY src/ src/

RUN pip install --no-cache-dir .

# Environment variables for configuration
ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=9000

# Tool poisoning test server on port 9000
EXPOSE 9000

# Run only the tool-poisoning-test server
CMD ["tool-poisoning-test"]
